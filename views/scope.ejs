



<div class="row">
  <div class="col-sm-2 col-md-4"></div>
  <div class="col-sm-8 col-md-4">
    <form action="/scope" method="POST">
      <input type='hidden' name='_csrf' value='<%= _csrf %>'>
      <input type='hidden' name='clientId' value='<%= req.client.id %>'>
      <input type='hidden' name='responseType' value='<%= req.param('responseType') %>'>
      <div class="row">
        <div class="col-sm-1 col-md-3"></div>
        <div class="col-sm-10 col-md-6">
          <img class="img-responsive preview-image" src="<%= req.user.image %>">
        </div>
        <div class="col-sm-1 col-md-3"></div>
      </div>
      <div class="row">
        <div class="col-sm-12 col-md-12 text-center">
          <h4><%= req.user.fullName %></h4>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12 col-md-12">
          <h3><em>"<%= req.client.name %>"</em> client need you to approve the following scopes</h3>
          <ul class="text-big">
            <% req.client.scopes.forEach(function(thisScope) { %>
              <li><%= thisScope.name %></li>
            <% }) %>
          </ul>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12 col-md-12">
          <button type="submit" class="btn btn-default btn-block btn-glass chalk text-big">Approve</button>
        </div>
      </div>
    </form>
  </div>
  <div class="col-sm-2 col-md-4"></div>
</div>
